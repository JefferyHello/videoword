<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey1"
    android:orientation="vertical" >
	
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center" >
              
     <Button
         android:id="@+id/memorize"
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:background="@drawable/memorize"
         android:layout_gravity="center_vertical" />
        
  		<View
            android:layout_width="120dp" 
            android:layout_height="match_parent" />
  
        <Button
            android:id="@+id/watch"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/video" />
        
         <View
            android:layout_width="120dp" 
            android:layout_height="match_parent" />
  
         <Button
            android:id="@+id/read"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/read" />
               
	</LinearLayout>
	
     <View
            android:layout_width="fill_parent" 
            android:layout_height="20dp" />   
     
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >


 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp" >
        
        <ImageView
            android:id="@+id/image1"
            android:layout_width="65dp"
            android:layout_height="65dp"  
            android:src="@drawable/pace"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />
        
        <Button
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress"
            android:textColor="@color/grey3" 
            android:background="@color/white"
            android:textSize="28dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image1"
            android:layout_marginLeft="20dp" />

        
        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/img3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />
        
    </RelativeLayout>
  
       <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="@color/grey2" />
    
        <RelativeLayout
        	android:layout_width="fill_parent"
        	android:layout_height="90dp"
        	android:orientation="horizontal" >
      	
        <ImageView
            android:id="@+id/image3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/already"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" />

        
        <Button
            android:id="@+id/btn_leaningpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_read"
            android:textColor="@color/grey3" 
            android:background="@color/white"
            android:textSize="28dp"
            android:layout_toRightOf="@+id/image3"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" />
        
        <ImageView
            android:id="@+id/image4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/img3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
        
    </RelativeLayout>
  
       <View
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@color/grey2" />
    
        <RelativeLayout
        	android:layout_width="fill_parent"
        	android:layout_height="90dp"
       	 	android:orientation="horizontal"
          	android:gravity="center_vertical" >
        
        <ImageView
            android:id="@+id/image6"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/form"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" />
        
        <Button
            android:id="@+id/wordform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/word_form"
            android:background="@color/white"
            android:textColor="@color/grey3" 
            android:textSize="28dp"
            android:layout_toRightOf="@+id/image6"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>

        
        <ImageView
            android:id="@+id/image7"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/img3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"  />
        
    </RelativeLayout>
  
       <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey2" />
    
      <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image9"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/alreadyvideo"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        
        <Button
            android:id="@+id/alreadyvideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alreadyvideo"
            android:textColor="@color/grey3" 
            android:background="@color/white"
            android:textSize="28dp"
            android:layout_toRightOf="@+id/image9"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" />
        
        <ImageView
            android:id="@+id/image10"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/img3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
        
    </RelativeLayout>
  
       <View
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:background="@color/grey2" />
       
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image11"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/mynote"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" />
        
        <Button
            android:id="@+id/mynote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mynote"
            android:textColor="@color/grey3" 
            android:background="@color/white"
            android:textSize="28dp"
            android:layout_toRightOf="@+id/image11"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" />
        
        <ImageView
            android:id="@+id/image10"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/img3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
        
    </RelativeLayout>
    
       <View
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@color/grey2" />
    
    </LinearLayout>
      
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center" >
  
  		<Button
            android:id="@+id/mian_page"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ck1" />
        
  		<View
            android:layout_width="150dp" 
            android:layout_height="match_parent" />
  
        <Button
            android:id="@+id/study_page"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/study2" />
        
         <View
            android:layout_width="150dp" 
            android:layout_height="match_parent" />
  
        <Button
            android:id="@+id/setup_page"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/setup1"
            android:layout_gravity="center_vertical" />
               
      </LinearLayout>
          
</FrameLayout>
    
</LinearLayout>
