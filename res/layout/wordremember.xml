<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="@string/word_remember"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />
        
        <Button
            android:id="@+id/rules"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/rules"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayoutv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout 
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true" >

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wordname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/blue"
                    android:textSize="30dp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/btn_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_sound" />
                 
                 <View
                    android:layout_width="20dp"
                    android:layout_height="10dp" />
                 
                 <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />
            
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/explain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible" >

                <Button
                    android:id="@+id/btn_word"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/btn2"
                    android:text="@string/bword_txt"
                    android:textColor="@color/white"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/txt_word"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:textColor="#393939"
                    android:textSize="25dp" />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/translation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible" >

                <Button
                    android:id="@+id/translation_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/btn2"
                    android:text="@string/bword_ctxt"
                    android:textColor="@color/white"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/wordmean"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_note"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible" >

                <Button
                    android:id="@+id/btn_note"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/btn2"
                    android:text="@string/bword_note"
                    android:textColor="@color/white"
                    android:textSize="26dp" />

                <LinearLayout
                    android:id="@+id/bword_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible" >

                    <EditText
                        android:id="@+id/txt_word2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="@string/bword_hint"
                        android:lines="3"
                        android:minHeight="60dp"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/save"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@drawable/btn1"
                            android:text="@string/bn_save"
                            android:textColor="@color/white" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/share"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@drawable/btn1"
                            android:text="@string/bn_share"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:background="@color/grey5" />

        <LinearLayout
            android:id="@+id/rightpanel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/grey5"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" >

            <View
                android:layout_width="wrap_content"
                android:layout_height="120dp" />
            
            <!-- yes=得3分 -->
            <LinearLayout
                android:id="@+id/forscore_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/forscore_3_yes"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/ok_word"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/forscore_3_no"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/q_word"
                    android:textColor="@color/white" />
                
            </LinearLayout>
            
            <!-- yes=得2分 -->
            <LinearLayout
                android:id="@+id/forscore_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:visibility="gone">

                <Button
                    android:id="@+id/forscore_2_yes"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/ok_word"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/forscore_2_no"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/q_word"
                    android:textColor="@color/white" />
                
            </LinearLayout>
 
            
            <!-- yes=得1分 -->
            <LinearLayout
                android:id="@+id/forscore_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                 >

                <Button
                    android:id="@+id/forscore_1_yes"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/ok_word"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/forscore_1_no"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/no_word"
                    android:textColor="@color/white" />
            </LinearLayout>
 
            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/up"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/up"
                android:textColor="@color/white" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/next"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/next"
                android:textColor="@color/white" />
            
        </LinearLayout>

       </RelativeLayout>

</LinearLayout>